
  <ul class="media-list">
    <% microposts.each do |micropost| %>
        <div class="panel panel-default">
          <li class="media">
            <div class="media-left">
              <% if micropost.image? %>
  　　          <%= image_tag micropost.image.thumb.url,class:"thumb_image" %>
  　           <% else %>
  　　          <%# image_tag 'noimage.gif',class:"thumb_image" %>
                <img class="media-object img-rounded" src="<%= gravatar_url(micropost.user, options = { size: 50 }) %>" alt="">
              <% end %>
            </div>
            <div class="media-body">
              <div>
                <%= link_to micropost.user.name, user_path(micropost.user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
              </div>
              <div>
                <p><%= micropost.title %></p>
                  <%= link_to "詳細", tripost_path(micropost), class: "btn btn-success btn-xs" %>
              </div>
            </div>
          </li>
        </div>
    <% end %>
    <%# paginate microposts %>
  </ul>